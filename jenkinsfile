pipeline {
    agent any

    stages {
        stage('Docker Build') {
            steps {
                sh '''
                # Docker Build
                sudo docker build -t 642958529262.dkr.ecr.ap-southeast-1.amazonaws.com/static-apache:$BUILD_NUMBER .
                # ecr Login
                aws ecr get-login-password --region ap-southeast-1 | sudo docker login --username AWS --password-stdin 642958529262.dkr.ecr.ap-southeast-1.amazonaws.com
                # push the image to ecr
                sudo docker push 642958529262.dkr.ecr.ap-southeast-1.amazonaws.com/static-apache:$BUILD_NUMBER
                '''
            }
        }
        stage('EKS Deploy') {
            steps {
                sh '''
                # helm
                kubectl create ns
                helm upgrade -i static-dev static -n dev
                '''
            }
        }
        // stage('Validation') {
        //     steps {
        //         sh '''
        //         cd k8s/
        //         # apply kubectl
        //         kubectl get po -A
        //         '''
        //     }
        // }
    }
}